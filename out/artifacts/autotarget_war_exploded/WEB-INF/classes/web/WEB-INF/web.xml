    <!-- 为树莓派建立的url   -->
    <servlet>
        <servlet-name>getstatistic</servlet-name>
        <servlet-class>com.target.forRPI.getStatistic</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>getstatistic</servlet-name>
        <url-pattern>/getstatistic</url-pattern>
    </servlet-mapping>



</web-app>
